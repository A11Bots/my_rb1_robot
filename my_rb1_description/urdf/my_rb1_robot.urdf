<?xml version="1.0"?>

<robot name="Rb_1">
    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <!--gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
            <alwaysOn>true</alwaysOn>
            <updateRate>20</updateRate>
            <leftJoint>joint_baselink_leftwheel</leftJoint>
            <rightJoint>joint_baselink_rightwheel</rightJoint>
            <wheelSeparation>0.4</wheelSeparation>
            <wheelDiameter>0.05</wheelDiameter>
            <torque>10</torque>
            <commandTopic>cmd_vel</commandTopic>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>base_link</robotBaseFrame>
        </plugin>
    </gazebo>

    <! Gazebo tags - Laser scan >
    <gazebo reference="Laser_joint">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>
    <gazebo reference="front_laser">
        <material>Gazebo/DarkGrey</material>
    </gazebo>

    <gazebo reference="front_laser" >
        <sensor type="ray" name="head_hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>20</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.570796</min_angle>
                        <max_angle>1.570796</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.20</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so" >
                <topicName>/scan</topicName>
                <frameName>sensor_laser</frameName>
            </plugin>
        </sensor>
    </gazebo!-->
    
    

    

	<!--Link - base_link -->
	<link name="base_link">
		<inertial>
			<mass value="21" />
			<origin xyz="0 0 0.15" rpy="0 0 0" />
			<inertia ixx="0.5819" ixy="0" ixz="0" iyy="0.5819" iyz="0" izz="0.9450" />
		</inertial>

		<collision>
			<geometry>
				<cylinder length="0.3" radius="0.25"/>
			</geometry>
		</collision>

		<visual>
			<geometry>
				<cylinder length="0.3" radius="0.25"/>
			</geometry>
			<material name="DarkBlue">
				<color rgba="0.2 0.2 0.4 1" />
			</material>
		</visual>
	</link>

	<!-- Joint - base_link / left wheel -->
	<joint name="joint_baselink_leftwheel" type="continuous">
		<origin rpy="0 0 0" xyz="0 -0.2 -0.15" />
		<child link="left_wheel" />
		<parent link="base_link" />
		<axis rpy="0 0 0" xyz="0 1 0" />
		<limit effort="10000" velocity="1000" />
		<joint_properties damping="1.0" friction="1.0" />
	</joint>
	<!-- Link - left_wheel -->
	<link name="left_wheel">
		<inertial>
			<mass value="1" />
			<origin xyz="0 0 0" rpy="0 0 0" />
			<inertia ixx="0.0008333" ixy="0" ixz="0" iyy="0.0008333" iyz="0" izz="0.0013"  />
		</inertial>

		<!-- Tires -->
		<collision>
			<origin rpy="1.5707 0 0" xyz="0 0 0" />
			<geometry>
				<cylinder length="0.05" radius="0.025"/>	
			</geometry>
		</collision>
		<visual>
			<origin rpy="1.5707 0 0" xyz="0 0 0" /> 
			<geometry>
				<cylinder length="0.05" radius="0.025"/>	
			</geometry>
			<material name="Red">
				<color rgba="1 0 0 1" />
			</material>
		</visual>
    </link>

    <!-- Joint - base_link / right wheel -->
	<joint name="joint_baselink_rightwheel" type="continuous">
		<origin rpy="0 0 0" xyz="0 0.2 -0.15" />
		<child link="right_wheel" />
		<parent link="base_link" />
		<axis rpy="0 0 0" xyz="0 1 0" />
		<limit effort="10000" velocity="1000" />
		<joint_properties damping="1.0" friction="1.0" />
	</joint>
	<!-- Link - right_wheel -->
	<link name="right_wheel">
		<inertial>
			<mass value="1" />
			<origin xyz="0 0 0" rpy="0 0 0" />
			<inertia ixx="0.0008333" ixy="0" ixz="0" iyy="0.0008333" iyz="0" izz="0.0013"  />
		</inertial>

		<!-- Tires -->
		<collision>
			<origin rpy="-1.5707 0 0" xyz="0 0 0" />
			<geometry>
				<cylinder length="0.05" radius="0.025"/>	
			</geometry>
		</collision>
		<visual>
			<origin rpy="-1.5707 0 0" xyz="0 0 0" /> 
			<geometry>
				<cylinder length="0.05" radius="0.025"/>	
			</geometry>
			<material name="Red">
				<color rgba="1 0 0 1" />
			</material>
		</visual>
    </link>

    <!-- Joint - caster wheel -->
    <joint name="joint_chassis_caster_wheel" type="fixed">
        <origin rpy="0 0 0" xyz="-0.1 0 -0.15" />
        <child link="back_caster" />
        <parent link="base_link" />
        <joint_properties damping="1.0" friction="0.0" />
    </joint>

    <!-- Link - caster wheel -->
    <link name="back_caster">
        <inertial>
            <mass value="0.5" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.000125" ixy="0" ixz="0" iyy="0.000125" iyz="0" izz="0.000125"/>
        </inertial>

        <!-- Caster wheel support -->
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.015" />
            <geometry>
                <sphere radius="0.035" />
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.015" />
            <geometry>
                <sphere radius="0.035" />
            </geometry>
            <material name="DarkBlue">
                <color rgba="0.2 0.2 0.4 1" />
            </material>
        </visual>

        <!-- Caster wheel -->
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.0" />
            <geometry>
                <sphere radius="0.025" />
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025" />
            </geometry>
            <material name="Grey">
                <color rgba="0.6 0.6 0.6 1" />
            </material>
        </visual>
    </link>

    <!-- Joint - caster wheel2 -->
    <joint name="joint_chassis_caster_wheel_2" type="fixed">
        <origin rpy="0 0 0" xyz="0.1 0 -0.15" />
        <child link="front_caster" />
        <parent link="base_link" />
        <joint_properties damping="1.0" friction="0.0" />
    </joint>

    <!-- Link - caster wheel 2 -->
    <link name="front_caster">
        <inertial>
            <mass value="0.5" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.000125" ixy="0" ixz="0" iyy="0.000125" iyz="0" izz="0.000125"/>
        </inertial>

        <!-- Caster wheel support -->
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.015" />
            <geometry>
                <sphere radius="0.035" />
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.015" />
            <geometry>
                <sphere radius="0.035" />
            </geometry>
            <material name="DarkBlue">
                <color rgba="0.2 0.2 0.4 1" />
            </material>
        </visual>

        <!-- Caster wheel -->
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025" />
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025" />
            </geometry>
            <material name="Grey">
                <color rgba="0.6 0.6 0.6 1" />
            </material>
        </visual>
    </link>

    <!-- base_footprint -->
    <joint name="base_footprint" type="fixed" >
        <origin rpy="0 0 0" xyz="0 0 -0.15" />
        <child link="basefootprint" />
        <parent link="base_link" />
        <joint_properties damping="1.0" friction="0.0" />
    </joint>

    <!-- basefootprint -->
    <link name="basefootprint" >
        <inertial>
            <mass value="0" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
    </link>

    <!--Laser_Joint-->
    <joint name="Laser_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.25 0 0.075" />
        <child link="front_laser" />
        <parent link="base_link" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="front_laser" >
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="3.1415 0 0" />
            <inertia ixx="0.0000895" ixy="0" ixz="0" iyy="0.0000895" iyz="0" izz="0.0001125" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.015" length="0.020"/>
            </geometry>
            <material name="Red">
                <color rgba="0.7 0.1 0.1 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.015" length="0.020"/>
            </geometry>
        </collision>
    </link>
</robot>

    

    
    


